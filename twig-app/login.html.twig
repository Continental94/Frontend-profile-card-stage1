{# twig-app/templates/login.html.twig #}
{% extends "base.html.twig" %}

{% block title %}Login - Access Dashboard{% endblock %}

{% block main_content %}
    <div class="auth-container card">
        <h2>Login</h2>
        <form id="login-form">
            <label for="username">Username (Test: test)</label>
            <input type="text" id="username" name="username" required>
            
            <label for="password">Password (Test: password)</label>
            <input type="password" id="password" name="password" required>
            
            <p id="login-error" class="error-message"></p>
            
            <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 10px;">Login</button>
        </form>

        <p style="margin-top: 20px; text-align: center;">
            {# Link to the new Sign Up page #}
            New User? <a href="/auth/signup">Sign Up</a>
        </p>
    </div>
{% endblock %}